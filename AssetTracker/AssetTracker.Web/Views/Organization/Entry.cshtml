@model AssetTracker.Core.Models.Organization
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Entry</title>
</head>
<body>
    <div class="container">
        <form method="POST" class="form-group">
            <h1>Organization Entry</h1>
            <p>
                @Html.LabelFor(c => c.Name, new { @class = "label_green", data_value = "anything" })
                @Html.TextBoxFor(c => c.Name)
                @Html.ValidationMessageFor(c => c.Name)
            </p>
            <p>
                @Html.LabelFor(c => c.Code)
                @Html.TextBoxFor(c => c.Code)
                @Html.ValidationMessageFor(c => c.Code)
            </p>
            <p>
                @Html.LabelFor(c => c.Location)
                @Html.EditorFor(c => c.Location)
                @Html.ValidationMessageFor(c => c.Location)
            </p>

            <input type="submit" value="Save" />
        </form>


        <div>
            @if (ViewBag.SuccessMessage != null)
            {
                <h1> @ViewBag.SuccessMessage</h1>
            }

            @if (ViewBag.ErrorMessage != null)
            {
                <h3>@ViewBag.ErrorMessage</h3>
            }

        </div>

    </div>
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>

</html>

